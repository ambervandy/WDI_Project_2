<!DOCTYPE html>
<html>
<head>
	<title><%= users.username %></title>
	<link rel="stylesheet" type="text/css" href="/css/users/show.css">
	<link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAF13D52tQ7DIimjcN7gRz1gkJTZElqPgw"></script>
	<script type="text/javascript" src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
	<script type="text/javascript" src="/js/userShow.js"></script>
</head>
<body>
	<% include ../partials/navbar %>

	<div id="profileContainer">
		<div id="profileImg">
			<img src="<%= users.profileImg %>">
		</div>


		<!-- Page title -->
		<div id="userInfo">
			<h1><%= users.username %></h1>
			<p><%= users.originCity %></p>
		</div>
	</div>

	<!-- User trip map -->
	<div id="map-Container">
		<div id="userMap"></div>
	</div>	


	<!-- Show list of trips -->
	<div id="tripContainer">
		<h3>ALL TRIPS</h3>
		<ul id="tripUl">
			<% for(var i = 0; i < users.trips.length; i++) { %>
				<!-- These need to link to the trip's show page -->
				<li><a href="/trips/<%= users.trips[i].id %>" class="tripLi"><span><%= users.trips[i].destination %> </span>
					
					<% if (users.trips[i].trip_rating == 1) { %>
						<div class="rating">
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456354086/destinations/star.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456354086/destinations/star.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456354086/destinations/star.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456354086/destinations/star.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
						</div>	
					<% } %>	
					<% if (users.trips[i].trip_rating == 2) { %>
						<div class="rating">
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456354086/destinations/star.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456354086/destinations/star.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456354086/destinations/star.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
						</div>
					<% } %>
					<% if (users.trips[i].trip_rating == 3) { %>
						<div class="rating">
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456354086/destinations/star.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456354086/destinations/star.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
						</div>
					<% } %>
					<% if (users.trips[i].trip_rating == 4) { %>
						<div class="rating">
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456354086/destinations/star.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
						</div>
					<% } %>
					<% if (users.trips[i].trip_rating == 5) { %>
						<div class="rating">
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
							<i><img src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456355457/destinations/starSolid2.png"></i>
						</div>
					<% } %>
				</a>
					<input type="hidden" name="trip_id" value="<%= users.trips[i].id %>" />
				</li>
			<% } %>
		<ul>
	</div>

	<!-- need if statement, if user id = this user can edit profile -->
	<% if (usertrue) { %>
		<div id="buttonHolder">
			<!-- Link to add a new trip -->
		    <form action="/users/<%= users.id %>/newTrip">
			    <input type="submit" value="ADD TRIP">
			</form>

			<!-- Link to edit profile -->
		    <form id="editProfile" action="/users/<%= users.id %>/edit">
			    <input type="submit" value="EDIT PROFILE">
			</form>
		</div>
	<% } %>

	<!-- hidden input for user id -->
	<input id="hidden" type="hidden" value="<%= users.id %>">
			

<% include ../partials/footer %>

















