<html>
<head>
	<title><%= trips.destination %></title>
	<link rel="stylesheet" type="text/css" href="/css/trips/show.css">
	<link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAF13D52tQ7DIimjcN7gRz1gkJTZElqPgw"></script>
	<script type="text/javascript" src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
	<script type="text/javascript" src="/js/tripShow.js"></script>
</head>
<body>
	
	<!-- need to be able to grab the user's username here -->
	<!-- nav bar -->
	<ul id="nav">
		<li><a href="/"><img id="logoImg" src="http://res.cloudinary.com/dmjtck2cd/image/upload/v1456330609/destinations/logoBlack.png"></a></li>
		<li><a href="/users">TRAVELERS</a></li>
		<li><a href="/trips">TRIPS</a></li>
		<li><a href="/users/<%= trips.user_id %>">PROFILE</a></li>
		<li><a href="/users/logout">LOGOUT</a></li>
	</ul>

	<!-- profile title container -->
	<div id="tripContainer">
		<div id="smallMapContainer">
			<div id="mapImg"></div>
		</div>

		<!-- Page title -->
		<div id="tripInfo">
			<h1><%= trips.destination %></h1>
			<div><%= trips.trip_rating %></div>
		</div>
	</div>

	<!-- trip img -->
	<div id="tripImgContainer">
		<img src="<%= trips.tripImg %>" >
	</div>

	<!-- dates visited -->
	<div id="dates">
		<h3>DATES VISITED</h3>
		<p id="date"><%= trips.date_start %> - <%= trips.date_finish %></p>
	</div>


	<!-- packing list -->
	<div id="packingList">
		<h3>RECOMMENDED PACKING LIST</h3>
		<p><%= trips.packing_list %></p>
	</div>

	<!-- itinerary -->
	<div id="itinerary">
		<h3>ITINERARY</h3>
		<p><%= trips.itinerary %></p>
	</div>

	<!-- different -->
	<div id="different">
		<h3>THINGS I WOULD HAVE DONE DIFFERENTLY</h3>
		<p><%= trips.different %></p>
	</div>


		<% if (usertrue) { %>
			<!-- Link to edit profile -->
		    <form action="/users/<%= trips.user_id %>/trips/edit">
		    	<input type="hidden" name="tripId" value="<%= trips.id %>">
			    <input type="submit" value="UPDATE">
			</form>

			<!-- need to figure out how to hide this for other users -->
			<form action="/users/<%= trips.user_id %>/trips?_method=DELETE" method="POST">
				<input type="hidden" name="trip_id" value="<%= trips.id %>">
		      	<input type="submit" value="DELETE">
		    </form>
	    <% } %>    

    <input id="hidden" type="hidden" value="<%= trips.id %>">

    <% include ../partials/footer %>












